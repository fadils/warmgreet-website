<!DOCTYPE html>
<link rel="icon" type="image/png" href="http://i.imgur.com/QwzZ4bE.png">
<html>
<head>
  <title>WarmGreet</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  

        

<header>
  <nav class="top-nav group">

    <div class="top-nav-header">
      <div class="logo">
      <% if signed_in? %>
        <a href="<%= user_url(current_user)%>">
          <%= image_tag("wg_logo_2.png", height: '60', width: '60')%>
        </a>
      <% else %>
        <a href="/">
          <%= image_tag("wg_logo_2.png", height: '60', width: '60')%>
        </a>
      <% end %>
    </div>

    <div class="WG-mainlogo">
        <%= image_tag("WGSlice/mainlogo.png", height: '80%', width: '80%')%>
    </div>

    <div class="info">
        <ul>
          <strong>
          <% if signed_in? %>
            <%#if current_user = shopper%>
            <li style="color:white">Hi,
              <%#= link_to current_user.username, user_url(current_user) %>
              <%= link_to current_user.username.capitalize, profile_index_url(current_user), {:style => 'color:#FFFFFF;'} %>
              
              <%= "(admin)" if current_user.admin == true %>
            </li>
            <li style="color:white"><%= link_to "Sign Out", session_url, {:style => 'color:#FFFFFF;'}, :method => :delete %></li>
          <% else %>
            <li><%= link_to "Sign In", new_session_url %></li>
            <li><%= link_to "Sign up", new_user_url %></li>
          <% end %>
          </strong>
        </ul>
      </div>
      
    <div class="container group">

      <div class = "write_story">
        <% if signed_in? %>
        <a href="<%= user_url(current_user)%>"  style="color:white">
            What's your story
        </a>
          <%#= link_to "What's your story".html_safe, user_url(current_user) %>
        <%# else %>
          <%#= link_to "<li>Home</li>".html_safe, new_session_url %>
        <% end %>
      </div>

      <div class = "category">
          <a href="/"  style="color:white">
            Discover
           </a>
          <%#= link_to "Discover".html_safe, "/" %>
      </div>

      <div class = "find_friends">
        <a href="<%= users_url%>"  style="color:white">
            Find Friends
        </a>
          <%#= link_to "Find Friends".html_safe, users_url %>
      </div>
    </div>


  </div>

      

             
        
      

      

    </div>
  </nav>
</header>

<main>
  <div class="main group">

    <%= yield %>

  </div>
</main>


<footer class="group">
  <div class="footer group">
  </div>
</footer>

</body>
</html>