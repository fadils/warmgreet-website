    </div>
    
        
      
    </div>
  </div>
<% end %>
    
    <% if signed_in? %>
      <% if request.original_url == "#{home}/users/#{current_user.slug}" %>
        <div class="jumbotron bg-feed">
        </div>
      <% end %>
    <% end %>

  <div class="container">
    <%= yield %>
  </div>

   <%= render "layouts/footer" %>
 
</body>
</html>