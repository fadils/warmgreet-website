          <% end %>
        <% end %>
      </div-->

      
      <div class="info">
          
        <ul>
            <%#if current_user = shopper%>
            
            <li class="list-header">

              <%#= link_to current_user.username, user_url(current_user) %>

                  <a href="<%=profile_index_url(current_user)%>" style ='color:#FFFFFF; font-family:bariol;'>
                    <%=current_user.username.capitalize%>
                    <b class="caret"></b>
                  </a>

                      <ul>
                        <li><%= link_to "Story Feed", user_url(current_user),:style => 'color:#FFFFFF;' %></li>
                        <li><%= link_to "Sign Out", session_url, :method => :delete, :style => 'color:#FFFFFF;' %></li>
                      </ul>

            </li>
            
          </ul>


        </div>

               
