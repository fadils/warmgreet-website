<form class="form-signin" action="<%= session_url %>" method="post">

  <h2 class="form-signin-heading">Enter your credentials</h2>

  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input class="form-control" id="user_username" name="user[username]" type="text" placeholder="Username" required autofocus>

  <br>
  
  <input class="form-control" id="user_merchant_number" name="user[merchant_number]" type="text" placeholder="Merchant Number" required>
  
  <br>
  
  <input class="form-control" id="user_password" name="user[password]" type="password" placeholder="Password" required>
  
  <br>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

  <div>
    <h5>No credentials yet? <%= link_to "Sign Up Now", new_user_url %></h5>
  </div>
</form>