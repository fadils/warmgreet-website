 <div class="content-header">
      
  <h2 class="search-box-title">What's your online shopping story?</h2>

  <form class="group" action="<%= search_url %>" method="get">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <div class="search-box">

          
          <input type="text" name="query" value="">
        </div>

       <div class="search-submit group">
          <input class="button-writing" type="submit" value="Create Story">
        </div>
      </form>
  </div>

<div class="content group">
  <div class = "content-main-header">
    <div class="category-separator">
        <label>CATEGORY</label> 
        <%= image_tag "WGSlice/stripe_repeat.png" %> 
      </div>
      <br>
      <%= link_to "Add a new online store", new_country_merchant_url(@country) %>
  </div>

  <div class = "content-main">
      <%#<h2>Whats's Popular in <%= @city.name %> <%#= @city.state.name %><%#/h2%>
      

      <ol class="group">
      <% @merchants.each_with_index do |merchant, i| %>

      <a href="<%= merchant_url(merchant) %>">
        <% if merchant.photo.file? %>
          <%= image_tag merchant.photo.url(:small) %>
        <% else %>
          <%= image_tag "http://i.imgur.com/xqtsqlj.png", size: "60x60" %>
        <% end %>
        
      </a>

        <li class="results">
          <%= (5*(@merchants.current_page-1))+i+1 %>.
          <a href="<%= merchant_url(merchant) %>">
            <%= merchant.name %>
          </a>
          (Average Rating: <%= merchant.avg_rating.to_f.round(1) %>)
          <br>

          <h3>
            <%= merchant.reviews.first.title %> by <a href="<%= user_url(merchant.reviews.first.user) %>">
            <%= merchant.reviews.first.user.username %>
          </a>
          </h3>

        
          <% if merchant.reviews.first.user.photo.file? %>
            <%= image_tag merchant.reviews.first.user.photo.url(:small) %>
          <%end%>
          <%= merchant.reviews.first.body %>
        </li>

      <% end %>
      </ol>

      <%= paginate @merchants %>

      <hr>

      <h2>Recent Stories</h2>
      <ul class="recent-reviews-<%= @country.id %> group">
        <% @reviews.each do |review| %>
         <li class="recent-<%= @country.id %>">
          <%= render partial: "reviews/pusherform", locals: {review: review} %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

<script src="http://js.pusher.com/2.1/pusher.min.js"></script>
<script>
  var pusher = new Pusher('<%= ENV["PUSHER_KEY"] %>');

  var channel = pusher.subscribe('reviews');

  channel.bind('new-review', function(data) {
    var country = $(data).attr('data-id');
 $(data).hide().prependTo(".recent-reviews-"+country).slideDown("slow");

    $(".recent-"+country).last().remove();
  });
</script>