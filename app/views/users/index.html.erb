
<div class="content-container">
  <h1> Our awesome greeters </h1>
    <p class="lead">Get stories from people that matter to you</p>

    <ul class="list-results">
    <% @matter_users.each do |user|%>
    <%# @users.each do |user| %>

    

      <li>
        <div class="row">

          <div class="greeters-photo col-md-3">
            
              <a href="<%=user_url(user)%>">
                <% if user.photo.file? %>
                    <%= image_tag user.photo.url(:small), size:"100x100", :class => "circular" %>
                  <% elsif user.image? %>
                    <%= image_tag user.image, size: "100x100", :class => "circular" %>
                  <% else %>
                    <% if user.gender=="M"%>
                      <%= image_tag "WGSlice/default-user-male.png", size:"100x100"%>
                    <% elsif user.gender=="F"%>
                      <%= image_tag "WGSlice/default-user-female.png", size:"100x100"%>
                    <% else %>
                      <%= image_tag "WGSlice/default-user-male.png", size:"100x100" %>
                    <% end %>
                  <% end %>
              </a>
          </div>

          

          <div class="greeters-profile col-md-9">  
            <h3><%= link_to user.username, user_url(user) %></h3>
            
            <span><%= image_tag("WGSlice/WGv5-icon_story.png", :class => "greeter-badge-feed") %></span>

              <span style="font-weight:100;font-size:90%"><%= user.reviews.count %> Stories</span> 

            

            
            <span><%= image_tag("WGSlice/WGv5-icon_thumbs.png", :class => "greeter-badge-feed") %></span>

             <span style="font-weight:100;font-size:90%;"> <%= user.count_thumbs_up%> thumbs</span>

             <br>

             <strong> <%= user.followers.count %> </strong>
                     <% if user.followers.count != 1 %>
                      <strong> Followers </strong>
                     <% else %>
                       <strong> Follower </strong>
                     <% end %>
            <br>
            <strong> <%= user.followed_users.count %> </strong>
            <strong> Following </strong>
          </div>

          <!--div class="greeters-thumbed-story col-md-6">
