                  <%="Written #{time_ago_in_words(review.created_at)} ago"%>
              <% else %>
                  Written on <%= @thumb_stories.first.created_at.strftime("%m/%d/%Y") %>
              <% end %>
            </span>
            <br>
            <strong class="badge-feed"><%= @thumb_stories.first.vote_tags.count %></strong>
              <%= image_tag("WGSlice/helpfull-btn.png", :style => "display:inline;", size:"100x40") %>
          </div-->

        </div>
      </li>
      <br>
      <br>

    <% end %>
     
    </ul>

    <%= paginate @matter_users%>
</div>