<div class="review" data-id="<%= review.merchant.country.id %>">

  <h3><%=link_to review.merchant.name, merchant_url(review.merchant) %></h3>
  <strong style="font-family:'Bariol'; font-style:italic;">"<%= review.title %>"</strong>
  <div class="review-date"> <%= link_to review.user.username, user_url(review.user) %> <%="(#{time_ago_in_words(review.created_at)} ago)"%></div>

  <br>
  Rating: <%= review.rating %>
  <br><br>
  <div class="review-body-in-create">
  <%= review.body %>
  </div>

</div>