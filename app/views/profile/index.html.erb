<div class="prof-content-profile-view group">
  

      <div class="prof-left group">

        <% if @user.photo.file? %>
          <%= image_tag @user.photo.url(:big), :class => "user-propic" %>
        <% elsif @user.image? %>
          <%= image_tag @user.image, size: "160x160" %>
        <% else %>
          <% if @user.gender=="M"%>
            <%= image_tag "WGSlice/default-user-male.png", :class => "user-propic" %>
          <% elsif @user.gender=="F"%>
            <%= image_tag "WGSlice/default-user-female.png", :class => "user-propic"%>
          <% else %>
            <%= image_tag "WGSlice/default-user-male.png", :class => "user-propic" %>
          <% end %>
        <% end %>

        <div class = "user-username">
          <%= @user.username %>
        </div>

        <div class = "member-since-text">
          <%#= "Joined #{time_ago_in_words(@user.created_at)}" %>
          <%= " - member since #{@user.created_at.strftime("%d %B %Y")}" %>
        
        </div>

        
          <strong><%= image_tag("WGSlice/WGv5-icon_story.png", :class => "story-badge-in-profile") %></strong>

          <strong class = "story-badge-in-profile-text"><%= @user.reviews.count %> stories</strong> 


        
          <strong><%= image_tag("WGSlice/WGv5-icon_thumbs.png", :class => "thumbs-badge-in-profile") %></strong>

          <strong class="thumbs-badge-in-profile-text"> <%= @user.count_thumbs_up%> thumbs</strong>
          
          <strong class="following-number"> <%= @user.followers.count %> </strong>
          <strong class="following-text"> Followers </strong>

          <strong class="followed-number"> <%= @user.followed_users.count %> </strong>
          <strong class="followed-text"> Following </strong>

          <hr class = "after-profile-separator">

        <div class = "merchants-list-coainer">

          <h4 class= "followed-merchants-text">
            Followed Merchants
          </h4>

          <hr class = "followed-merchants-separator">

         
          <div class="prof-mid-stories-public group">
            <%= render "reviews/user_public", :user => @user %>
          </div>
         

         
          <% if @user.favorite_places.count > 0 %>
            <% @user.favorite_places.each do |followedmerchant| %>
            <ul class="followed-merchants-list">
              <% if followedmerchant.photo.file? %>
                  <li><%= link_to image_tag followedmerchant.photo.url(:small) %></li>
              <% else %>
                  <%#= link_to(image_tag("background.jpg", :alt => "home image", :width => 100, :height => 100, :title => "Click here to return to Home") "/") %>

                  <li>
                    <%= link_to(image_tag("WGSlice/default-merchant.png", :width => 126, :height => 126), merchant_url(followedmerchant)) %>
                    <%#= link_to(image_tag("WGSlice/default-merchant.png")), merchant_url(followedmerchant), size: "126x126"%>
                  </li>
              <% end %>
            </ul>
            <% end %>
          <% else %>
            <ul class="followed-merchants-list">
              <li><%= image_tag "WGSlice/default-merchant.png", size: "126x126" %></li>
              <li><%= image_tag "WGSlice/default-merchant.png", size: "126x126" %></li>
              <li><%= image_tag "WGSlice/default-merchant.png", size: "126x126" %></li>
              <li><%= image_tag "WGSlice/default-merchant.png", size: "126x126" %></li>
            </ul>
          <% end %>

        </div>

        <hr class = "after-merchants-list-separator">

        <div class = "stories-in-profile">
          <h4>Stories</h4>
          <hr class = "stories-in-profile-separator">
        </div>
        
        

        <% if current_user == @user %>
          <%= link_to "Edit Profile", edit_user_url(@user) %>
        <% end %>

        <% unless current_user == @user %>
          <div class="foll <%="is-followed" if current_user.followed_users.include?(@user) %>">
            <%#= button_to " ", user_follows_url(@user), class: "following-button", method: :post, form_class: "following-button", remote: true %>
            <%#= button_to " ", user_follow_url(@user), class: "followed-button", method: :delete, form_class: "followed-button", remote: true %>
            <%= button_to "FOLLOW", user_follows_url(@user), method: :post, form_class: "follow-button grad_button", remote: true %>
            <%= button_to "UNFOLLOW", user_follow_url(@user), method: :delete, form_class: "unfollow-button grad_button", remote: true %>
          </div>
        <% end %>

        
      </div>
      

  </div>